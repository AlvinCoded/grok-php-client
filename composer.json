{
    "name": "alvincoded/grok-php",
    "description": "A robust and feature-rich PHP wrapper for the Grok AI API",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": ["grok", "ai", "xai", "machine learning", "artificial intelligence", "chat", "api", "wrapper"],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "ext-json": "*",
        "psr/http-message": "^1.1|^2.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6",
        "symfony/var-dumper": "^6.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "GrokPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Alvin Panford",
            "email": "panfordalvin@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/alvincoded/grok-php/issues",
        "source": "https://github.com/alvincoded/grok-php"
    }
}
